<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        

        @if (routeData.PageType.FullName.Contains("WebApp.Components.Pages.Company.Admin.Login"))
        
        {
            <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.Company.Admin.Login.LoginLayout)" />
        }
        else if (routeData.PageType.FullName.Contains("WebApp.Components.Pages.Company.Admin"))
        {
            <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.Company.Admin.AdminLayout)" />

        }
        else if (routeData.PageType.FullName.Contains("WebApp.Components.Pages.Tenant"))
        {
            <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.Tenant.TenantLayout)" />

        }
        else
        {
            <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.Company.Admin.MainLayout)" />
        }
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>
